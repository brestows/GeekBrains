<Window x:Class="Lesson6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="35"/>
		</Grid.RowDefinitions>
		<ListView x:Name="lstDepartmentView" Margin="5" Grid.Row="0" >
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Департамент" Width="250" DisplayMemberBinding="{Binding Name}" />
					<GridViewColumn Header="Сотрудников" Width="100" DisplayMemberBinding="{Binding Count}" />
				</GridView>
			</ListView.View>
		</ListView>
		<Button Content="asdfasdf" Grid.Row="1" Click="Button_Click" />
	</Grid>
</Window>
