<Window x:Class="Lesson6.NewDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson6"
        mc:Ignorable="d"
        Title="Новый отдел" Height="70" Width="460" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="318*"/>
			<ColumnDefinition Width="33*"/>
			<ColumnDefinition Width="103*"/>
		</Grid.ColumnDefinitions>
		<Button x:Name="btnNewDepartment" Content="Новый отдел" Grid.Column="1" Margin="5" Grid.ColumnSpan="2" Click="btnNewDepartment_Click"/>
		<TextBox x:Name="txtNewDepartment" Margin="5" Text="{Binding Name}" />
	</Grid>
</Window>
